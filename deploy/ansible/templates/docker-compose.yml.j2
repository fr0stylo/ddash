services:
  ddash:
    image: {{ ddash_image }}
    restart: unless-stopped
    ports:
      - "{{ ddash_port }}:8080"
    environment:
      DDASH_ENV: production
      DDASH_PORT: 8080
      DDASH_DB_PATH: /data/ddash
      DDASH_SESSION_SECRET: ${DDASH_SESSION_SECRET}
      DDASH_SECURE_COOKIE: ${DDASH_SECURE_COOKIE}
      DDASH_PUBLIC_URL: ${DDASH_PUBLIC_URL}
      GITHUB_APP_INGESTOR_URL: ${GITHUB_APP_INGESTOR_URL}
      GITHUB_APP_INGESTOR_SETUP_TOKEN: ${GITHUB_APP_INGESTOR_SETUP_TOKEN}
      DDASH_OTEL_ENABLED: ${DDASH_OTEL_ENABLED}
      DDASH_OTEL_METRICS_CONSOLE: ${DDASH_OTEL_METRICS_CONSOLE}
      OTEL_EXPORTER_OTLP_ENDPOINT: http://otel-collector:4318
      OTEL_EXPORTER_OTLP_HEADERS: ${OTEL_EXPORTER_OTLP_HEADERS}
      OTEL_EXPORTER_OTLP_TRACES_HEADERS: ${OTEL_EXPORTER_OTLP_TRACES_HEADERS}
      OTEL_EXPORTER_OTLP_METRICS_HEADERS: ${OTEL_EXPORTER_OTLP_METRICS_HEADERS}
      OTEL_SERVICE_NAME: ddash
      OTEL_SERVICE_VERSION: ${OTEL_SERVICE_VERSION}
    volumes:
      - "{{ ddash_data_dir }}:/data"
    depends_on:
      - githubappingestor
      - otel-collector

  githubappingestor:
    image: {{ github_ingestor_image }}
    restart: unless-stopped
    ports:
      - "{{ github_ingestor_port }}:8081"
    environment:
      GITHUB_APP_INGESTOR_ADDR: :8081
      GITHUB_APP_INGESTOR_DB_PATH: /data/githubapp-ingestor
      GITHUB_APP_INGESTOR_SETUP_TOKEN: ${GITHUB_APP_INGESTOR_SETUP_TOKEN}
      GITHUB_APP_INSTALL_URL: ${GITHUB_APP_INSTALL_URL}
      GITHUB_WEBHOOK_SECRET: ${GITHUB_WEBHOOK_SECRET}
      DDASH_ENDPOINT: ${DDASH_ENDPOINT}
      DDASH_AUTH_TOKEN: ${DDASH_AUTH_TOKEN}
      DDASH_WEBHOOK_SECRET: ${DDASH_WEBHOOK_SECRET}
    volumes:
      - "{{ github_ingestor_data_dir }}:/data"

  otel-collector:
    image: otel/opentelemetry-collector-contrib:0.130.1
    restart: unless-stopped
    command: ["--config=/etc/otelcol-contrib/config.yaml"]
    volumes:
      - "{{ ddash_deploy_dir }}/otel-collector-config.yaml:/etc/otelcol-contrib/config.yaml:ro"
    ports:
      - "{{ otel_grpc_port }}:4317"
      - "{{ otel_http_port }}:4318"
      - "{{ otel_prom_export_port }}:8889"
    depends_on:
      - jaeger

  jaeger:
    image: jaegertracing/all-in-one:1.63.0
    restart: unless-stopped
    environment:
      COLLECTOR_OTLP_ENABLED: "true"
    ports:
      - "{{ jaeger_ui_port }}:16686"
      - "{{ jaeger_otlp_grpc_port }}:4317"

  prometheus:
    image: prom/prometheus:v3.5.0
    restart: unless-stopped
    command:
      - --config.file=/etc/prometheus/prometheus.yml
      - --storage.tsdb.path=/prometheus
      - --web.enable-remote-write-receiver
    volumes:
      - "{{ ddash_deploy_dir }}/prometheus.yml:/etc/prometheus/prometheus.yml:ro"
      - "{{ prometheus_data_dir }}:/prometheus"
    ports:
      - "{{ prometheus_port }}:9090"
    depends_on:
      - otel-collector

  grafana:
    image: grafana/grafana:12.0.2
    restart: unless-stopped
    environment:
      GF_SECURITY_ADMIN_USER: ${GRAFANA_ADMIN_USER}
      GF_SECURITY_ADMIN_PASSWORD: ${GRAFANA_ADMIN_PASSWORD}
    volumes:
      - "{{ grafana_data_dir }}:/var/lib/grafana"
      - "{{ ddash_deploy_dir }}/grafana-datasources.yml:/etc/grafana/provisioning/datasources/datasources.yml:ro"
    ports:
      - "{{ grafana_port }}:3000"
    depends_on:
      - prometheus
      - jaeger
